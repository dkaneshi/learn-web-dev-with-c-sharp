@page
@model TracksModel
@{
    ViewData["Title"] = "Learning Tracks";
}

<div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Learning Tracks</h1>
        <p class="text-xl text-gray-600">
            Structured learning paths to take you from beginner to job-ready C# web developer
        </p>
    </div>

    @if (Model.Tracks.Any())
    {
        <div class="space-y-8">
            @foreach (var track in Model.Tracks)
            {
                <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="p-8">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <h2 class="text-2xl font-bold text-gray-900 mb-3">@track.Title</h2>
                                @if (!string.IsNullOrEmpty(track.Description))
                                {
                                    <p class="text-gray-600 mb-4 leading-relaxed">@track.Description</p>
                                }
                                
                                <div class="flex items-center space-x-6 text-sm text-gray-500">
                                    <div class="flex items-center">
                                        <i class="fas fa-play-circle mr-2 text-blue-600"></i>
                                        <span>@track.Lessons.Count lessons</span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-clock mr-2 text-green-600"></i>
                                        <span>@(track.Lessons.Count * 8) minutes</span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-signal mr-2 text-purple-600"></i>
                                        <span>Beginner to Intermediate</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="ml-6 flex flex-col items-end">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a href="/Tracks/@track.Slug" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors">
                                        Start Track
                                    </a>
                                }
                                else
                                {
                                    <a href="/Auth/Register" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors">
                                        Sign Up to Start
                                    </a>
                                }
                            </div>
                        </div>
                        
                        @if (track.Lessons.Any())
                        {
                            <div class="mt-6 pt-6 border-t border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900 mb-4">What You'll Learn:</h3>
                                <div class="grid md:grid-cols-2 gap-3">
                                    @foreach (var lesson in track.Lessons.Take(6))
                                    {
                                        <div class="flex items-center text-sm text-gray-600">
                                            <i class="fas fa-check-circle text-green-500 mr-2"></i>
                                            <span>@lesson.Title</span>
                                        </div>
                                    }
                                    @if (track.Lessons.Count > 6)
                                    {
                                        <div class="flex items-center text-sm text-gray-500">
                                            <i class="fas fa-ellipsis-h mr-2"></i>
                                            <span>@(track.Lessons.Count - 6) more lessons...</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-16">
            <div class="text-gray-400 text-6xl mb-4">
                <i class="fas fa-book-open"></i>
            </div>
            <h2 class="text-2xl font-semibold text-gray-700 mb-2">No Learning Tracks Available</h2>
            <p class="text-gray-500">Learning tracks are being prepared. Check back soon!</p>
        </div>
    }

    <div class="mt-16 bg-blue-50 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to Start Learning?</h2>
        <p class="text-lg text-gray-700 mb-6">
            Our hands-on approach combines video lessons, coding labs, and real projects to make you job-ready.
        </p>
        @if (User.Identity?.IsAuthenticated != true)
        {
            <a href="/Auth/Register" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold mr-4">
                Create Free Account
            </a>
            <a href="/Auth/Login" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-8 py-3 rounded-lg font-semibold">
                Sign In
            </a>
        }
        else
        {
            <a href="/Dashboard" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold">
                Go to Dashboard
            </a>
        }
    </div>
</div>