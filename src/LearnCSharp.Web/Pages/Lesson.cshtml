@page "/Lessons/{slug}"
@model LessonModel
@{
    ViewData["Title"] = Model.Lesson?.Title ?? "Lesson";
}

@if (Model.Lesson == null)
{
    <div class="text-center py-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Lesson Not Found</h1>
        <p class="text-xl text-gray-600 mb-8">The lesson you're looking for doesn't exist or isn't available.</p>
        <a href="/Tracks" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold">
            View All Tracks
        </a>
    </div>
}
else
{
    <div class="max-w-4xl mx-auto">
        <!-- Lesson Header -->
        <div class="mb-8">
            <nav class="text-sm text-gray-500 mb-4">
                <a href="/Tracks" class="hover:text-blue-600">Learning Tracks</a>
                <span class="mx-2">›</span>
                <a href="/Tracks/@Model.Track?.Slug" class="hover:text-blue-600">@Model.Track?.Title</a>
                <span class="mx-2">›</span>
                <span class="text-gray-900">@Model.Lesson.Title</span>
            </nav>
            
            <h1 class="text-4xl font-bold text-gray-900 mb-4">@Model.Lesson.Title</h1>
            
            <div class="flex items-center space-x-6 text-sm text-gray-500 mb-6">
                <div class="flex items-center">
                    <i class="fas fa-clock mr-2 text-blue-600"></i>
                    <span>@Model.Lesson.DurationMinutes minutes</span>
                </div>
                @if (Model.Labs.Any())
                {
                    <div class="flex items-center">
                        <i class="fas fa-code mr-2 text-green-600"></i>
                        <span>@Model.Labs.Count lab@(Model.Labs.Count != 1 ? "s" : "")</span>
                    </div>
                }
                @if (Model.Quizzes.Any())
                {
                    <div class="flex items-center">
                        <i class="fas fa-question-circle mr-2 text-purple-600"></i>
                        <span>@Model.Quizzes.Count quiz@(Model.Quizzes.Count != 1 ? "zes" : "")</span>
                    </div>
                }
            </div>
        </div>

        <!-- Lesson Content -->
        <div class="space-y-8">
            <!-- Video Content -->
            @if (!string.IsNullOrEmpty(Model.Lesson.VideoUrl))
            {
                <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-play-circle mr-3 text-blue-600"></i>
                        Video Lesson
                    </h2>
                    <div class="aspect-video bg-gray-100 rounded-lg flex items-center justify-center">
                        <!-- Placeholder for video player -->
                        <div class="text-center">
                            <i class="fas fa-video text-4xl text-gray-400 mb-4"></i>
                            <p class="text-gray-600">Video content will be integrated here</p>
                            <a href="@Model.Lesson.VideoUrl" target="_blank" class="text-blue-600 hover:underline mt-2 inline-block">
                                Open Video Link
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Reading Material -->
            @if (!string.IsNullOrEmpty(Model.Lesson.Reading))
            {
                <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-book-open mr-3 text-green-600"></i>
                        Reading Material
                    </h2>
                    <div class="prose max-w-none">
                        @Html.Raw(Model.Lesson.Reading)
                    </div>
                </div>
            }

            <!-- Labs Section -->
            @if (Model.Labs.Any())
            {
                <div class="bg-white rounded-lg shadow-md border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                            <i class="fas fa-code mr-3 text-green-600"></i>
                            Hands-on Labs
                        </h2>
                        <p class="text-gray-600 mt-1">Practice what you've learned with coding exercises</p>
                    </div>
                    
                    <div class="divide-y divide-gray-200">
                        @foreach (var lab in Model.Labs)
                        {
                            <div class="p-6 hover:bg-gray-50 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-900 mb-2">@lab.Title</h3>
                                        <p class="text-gray-600 text-sm mb-4">@lab.Prompt</p>
                                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                                            <div class="flex items-center">
                                                <i class="fas fa-star mr-1 text-yellow-500"></i>
                                                <span>Max Score: @lab.MaxScore</span>
                                            </div>
                                            <div class="flex items-center">
                                                <i class="fas fa-flask mr-1 text-blue-500"></i>
                                                <span>Interactive Lab</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="ml-6">
                                        <a href="/Labs/@lab.Id" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium">
                                            Start Lab
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Quizzes Section -->
            @if (Model.Quizzes.Any())
            {
                <div class="bg-white rounded-lg shadow-md border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                            <i class="fas fa-question-circle mr-3 text-purple-600"></i>
                            Knowledge Check
                        </h2>
                        <p class="text-gray-600 mt-1">Test your understanding with interactive quizzes</p>
                    </div>
                    
                    <div class="divide-y divide-gray-200">
                        @foreach (var quiz in Model.Quizzes)
                        {
                            <div class="p-6 hover:bg-gray-50 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-900 mb-2">@quiz.Title</h3>
                                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                                            <div class="flex items-center">
                                                <i class="fas fa-question mr-1 text-purple-500"></i>
                                                <span>@quiz.Questions.Count question@(quiz.Questions.Count != 1 ? "s" : "")</span>
                                            </div>
                                            <div class="flex items-center">
                                                <i class="fas fa-clock mr-1 text-blue-500"></i>
                                                <span>~@(quiz.Questions.Count * 2) minutes</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="ml-6">
                                        <a href="/Quizzes/@quiz.Id" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium">
                                            Take Quiz
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Transcript -->
            @if (!string.IsNullOrEmpty(Model.Lesson.Transcript))
            {
                <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-file-alt mr-3 text-gray-600"></i>
                        Video Transcript
                    </h2>
                    <div class="prose max-w-none text-sm text-gray-700 bg-gray-50 p-4 rounded-lg">
                        @Html.Raw(Model.Lesson.Transcript)
                    </div>
                </div>
            }
        </div>

        <!-- Navigation -->
        <div class="mt-12 flex justify-between items-center">
            <div>
                @if (Model.PreviousLesson != null)
                {
                    <a href="/Lessons/@Model.PreviousLesson.Slug" class="text-blue-600 hover:text-blue-700 font-medium flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Previous: @Model.PreviousLesson.Title
                    </a>
                }
                else
                {
                    <a href="/Tracks/@Model.Track?.Slug" class="text-blue-600 hover:text-blue-700 font-medium flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Track
                    </a>
                }
            </div>
            
            <div>
                @if (Model.NextLesson != null)
                {
                    <a href="/Lessons/@Model.NextLesson.Slug" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold flex items-center">
                        Next: @Model.NextLesson.Title
                        <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                }
                else
                {
                    <a href="/Tracks/@Model.Track?.Slug" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold flex items-center">
                        Track Complete!
                        <i class="fas fa-check ml-2"></i>
                    </a>
                }
            </div>
        </div>
    </div>
}