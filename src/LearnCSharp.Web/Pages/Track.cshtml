@page "/Tracks/{slug}"
@model TrackModel
@{
    ViewData["Title"] = Model.Track?.Title ?? "Track";
}

@if (Model.Track == null)
{
    <div class="text-center py-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Track Not Found</h1>
        <p class="text-xl text-gray-600 mb-8">The learning track you're looking for doesn't exist or isn't available.</p>
        <a href="/Tracks" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold">
            View All Tracks
        </a>
    </div>
}
else
{
    <div class="max-w-4xl mx-auto">
        <!-- Track Header -->
        <div class="mb-8">
            <nav class="text-sm text-gray-500 mb-4">
                <a href="/Tracks" class="hover:text-blue-600">Learning Tracks</a>
                <span class="mx-2">â€º</span>
                <span class="text-gray-900">@Model.Track.Title</span>
            </nav>
            
            <h1 class="text-4xl font-bold text-gray-900 mb-4">@Model.Track.Title</h1>
            
            @if (!string.IsNullOrEmpty(Model.Track.Description))
            {
                <p class="text-xl text-gray-600 mb-6">@Model.Track.Description</p>
            }
            
            <div class="flex items-center space-x-6 text-sm text-gray-500">
                <div class="flex items-center">
                    <i class="fas fa-play-circle mr-2 text-blue-600"></i>
                    <span>@Model.Lessons.Count lessons</span>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-clock mr-2 text-green-600"></i>
                    <span>@(Model.Lessons.Count * 8) minutes</span>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-signal mr-2 text-purple-600"></i>
                    <span>Beginner to Intermediate</span>
                </div>
            </div>
        </div>

        <!-- Lessons List -->
        @if (Model.Lessons.Any())
        {
            <div class="bg-white rounded-lg shadow-md border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <h2 class="text-2xl font-bold text-gray-900">Course Content</h2>
                    <p class="text-gray-600 mt-1">@Model.Lessons.Count lessons in this track</p>
                </div>
                
                <div class="divide-y divide-gray-200">
                    @for (int i = 0; i < Model.Lessons.Count; i++)
                    {
                        var lesson = Model.Lessons[i];
                        <div class="p-6 hover:bg-gray-50 transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-4">
                                    <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-sm font-semibold text-blue-600">
                                        @(i + 1)
                                    </div>
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900">@lesson.Title</h3>
                                        <p class="text-gray-600 text-sm mt-1">@lesson.DurationMinutes minutes</p>
                                    </div>
                                </div>
                                
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a href="/Lessons/@lesson.Slug" class="text-blue-600 hover:text-blue-700 font-medium flex items-center">
                                        Start Lesson
                                        <i class="fas fa-arrow-right ml-2"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Auth/Login" class="text-blue-600 hover:text-blue-700 font-medium">
                                        Login to Start
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8 text-center">
                <div class="text-gray-400 text-4xl mb-4">
                    <i class="fas fa-book-open"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Lessons Available</h3>
                <p class="text-gray-500">Lessons for this track are being prepared. Check back soon!</p>
            </div>
        }

        <!-- Action Buttons -->
        <div class="mt-8 flex justify-between items-center">
            <a href="/Tracks" class="text-blue-600 hover:text-blue-700 font-medium flex items-center">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to All Tracks
            </a>
            
            @if (User.Identity?.IsAuthenticated == true && Model.Lessons.Any())
            {
                <a href="/Lessons/@Model.Lessons.First().Slug" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold">
                    Start Track
                </a>
            }
            else if (User.Identity?.IsAuthenticated != true)
            {
                <a href="/Auth/Register" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold">
                    Sign Up to Start
                </a>
            }
        </div>
    </div>
}