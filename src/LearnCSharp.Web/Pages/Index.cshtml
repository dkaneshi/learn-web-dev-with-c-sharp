@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
            Master C# for Web Development
        </h1>
        <p class="text-xl text-gray-600 mb-8">
            Learn ASP.NET Core, Entity Framework, and modern web development practices with hands-on coding challenges and real projects.
        </p>
        
        <div class="flex justify-center space-x-4 mb-12">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="/Dashboard" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold">
                    Continue Learning
                </a>
            }
            else
            {
                <a href="/Auth/Register" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold">
                    Start Learning
                </a>
                <a href="/Tracks" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-8 py-3 rounded-lg font-semibold">
                    View Curriculum
                </a>
            }
        </div>
    </div>
</div>

<div class="grid md:grid-cols-3 gap-8 mb-16">
    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-blue-600 text-3xl mb-4">
            <i class="fas fa-video"></i>
        </div>
        <h3 class="text-xl font-semibold mb-2">Short Video Lessons</h3>
        <p class="text-gray-600">Learn with bite-sized video lessons (5-10 minutes) that respect your time and focus on practical skills.</p>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-green-600 text-3xl mb-4">
            <i class="fas fa-code"></i>
        </div>
        <h3 class="text-xl font-semibold mb-2">Interactive Coding Labs</h3>
        <p class="text-gray-600">Practice with auto-graded coding challenges that give instant feedback and help you learn by doing.</p>
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-purple-600 text-3xl mb-4">
            <i class="fas fa-trophy"></i>
        </div>
        <h3 class="text-xl font-semibold mb-2">Real Projects</h3>
        <p class="text-gray-600">Build portfolio-ready projects including a TaskBoard app, Northwind API, and a Meal Planner capstone.</p>
    </div>
</div>

<div class="bg-white rounded-lg shadow-md p-8 mb-16">
    <h2 class="text-2xl font-bold text-center mb-8">Learning Tracks</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        @foreach (var track in Model.FeaturedTracks)
        {
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                <h3 class="font-semibold mb-2">@track.Title</h3>
                <p class="text-sm text-gray-600 mb-3">@track.Description</p>
                <div class="text-sm text-blue-600">
                    @track.Lessons.Count lessons
                </div>
            </div>
        }
    </div>
    
    <div class="text-center mt-8">
        <a href="/Tracks" class="text-blue-600 hover:text-blue-800 font-semibold">
            View All Tracks â†’
        </a>
    </div>
</div>

<div class="bg-blue-50 rounded-lg p-8 text-center">
    <h2 class="text-2xl font-bold mb-4">Ready to Start Your Journey?</h2>
    <p class="text-lg text-gray-700 mb-6">
        Join thousands of developers learning C# web development with our hands-on approach.
    </p>
    @if (User.Identity?.IsAuthenticated != true)
    {
        <a href="/Auth/Register" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold">
            Create Free Account
        </a>
    }
</div>